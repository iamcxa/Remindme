<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp" >

    <TextView
        android:id="@+id/card_cursor_main_inner_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="card_cursor_main_inner_title"
        android:textColor="@color/card_ThirdTittle"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/card_cursor_main_inner_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/card_cursor_main_inner_title"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:text="card_cursor_main_inner_subtitle"
        android:textColor="@color/card_SubTittle"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/card_cursor_main_inner_thirdtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/card_cursor_main_inner_subtitle"
        android:layout_below="@+id/card_cursor_main_inner_subtitle"
        android:layout_marginTop="10dp"
        android:text="card_cursor_main_inner_thirdtitle"
        android:textColor="@color/PagerSlidingTabStrip_dividerColor"
        android:textSize="15sp"
        android:textStyle="bold"  />

</RelativeLayout>


